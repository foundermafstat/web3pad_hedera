# HederaGameLaunchpad Environment Variables
# Copy this file to .env and fill in your values

# =============================================================================
# HEDERA NETWORK CONFIGURATION
# =============================================================================

# Hedera Testnet Configuration
HEDERA_TESTNET_URL=https://testnet.hashio.io/api
HEDERA_TESTNET_CHAIN_ID=296

# Hedera Mainnet Configuration (for production)
HEDERA_MAINNET_URL=https://mainnet.hashio.io/api
HEDERA_MAINNET_CHAIN_ID=295

# =============================================================================
# ACCOUNT CONFIGURATION
# =============================================================================

# Private key for deployment and transactions (without 0x prefix)
# Example: 302e020100300506032b657004220420...
PRIVATE_KEY=your_private_key_here

# Account ID for Hedera operations
# Example: 0.0.123456
ACCOUNT_ID=your_account_id_here

# =============================================================================
# CONTRACT ADDRESSES (filled after deployment)
# =============================================================================

# Main contract address
MAIN_CONTRACT_ADDRESS=

# Individual contract addresses
GAME_REGISTRY_ADDRESS=
RESULT_VERIFIER_ADDRESS=
PLAYER_SBT_ADDRESS=
NFT_MANAGER_ADDRESS=
TOKEN_ECONOMY_ADDRESS=
FAUCET_MANAGER_ADDRESS=
LOTTERY_POOL_ADDRESS=

# =============================================================================
# GAME SERVER CONFIGURATION
# =============================================================================

# Game server private key for signing game results
GAME_SERVER_PRIVATE_KEY=your_game_server_private_key_here

# Game server public key (for registration)
GAME_SERVER_PUBLIC_KEY=your_game_server_public_key_here

# =============================================================================
# TOKEN CONFIGURATION
# =============================================================================

# HPLAY Token Configuration
HPLAY_TOKEN_NAME=Hedera Play Token
HPLAY_TOKEN_SYMBOL=HPLAY
HPLAY_TOKEN_DECIMALS=8
HPLAY_TOTAL_SUPPLY=1000000000000000000

# Initial distribution addresses
GAME_REWARDS_POOL_ADDRESS=
DEVELOPER_INCENTIVES_ADDRESS=
DAO_TREASURY_ADDRESS=
MARKETING_EVENTS_ADDRESS=
LIQUIDITY_RESERVE_ADDRESS=

# =============================================================================
# FAUCET CONFIGURATION
# =============================================================================

# HBAR to HPLAY exchange rate (1 HBAR = X HPLAY)
HBAR_TO_HPLAY_RATE=500

# Daily limit per user (in HBAR)
DAILY_LIMIT_HBAR=10

# Bonus multiplier settings
BONUS_MULTIPLIER_MIN=100
BONUS_MULTIPLIER_MAX=150

# =============================================================================
# LOTTERY CONFIGURATION
# =============================================================================

# Lottery draw interval (in seconds)
LOTTERY_DRAW_INTERVAL=86400

# Transfer fee percentage (in basis points, 50 = 0.5%)
TRANSFER_FEE_PERCENT=50

# =============================================================================
# NFT CONFIGURATION
# =============================================================================

# NFT rarity burn fees (in HPLAY)
COMMON_NFT_BURN_FEE=10
RARE_NFT_BURN_FEE=50
EPIC_NFT_BURN_FEE=200
LEGENDARY_NFT_BURN_FEE=1000

# =============================================================================
# IPFS CONFIGURATION
# =============================================================================

# IPFS gateway URL
IPFS_GATEWAY_URL=https://ipfs.io/ipfs/

# IPFS API endpoint (if using custom IPFS node)
IPFS_API_URL=

# IPFS API key (if required)
IPFS_API_KEY=

# =============================================================================
# MONITORING AND ANALYTICS
# =============================================================================

# Block explorer API key (for contract verification)
ETHERSCAN_API_KEY=

# Gas reporting
REPORT_GAS=true

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================

# Signature expiration time (in seconds)
SIGNATURE_EXPIRATION_TIME=300

# Minimum score requirements per game
SAMPLE_GAME_MIN_SCORE=1000

# =============================================================================
# DEVELOPMENT CONFIGURATION
# =============================================================================

# Hardhat network configuration
HARDHAT_NETWORK_NAME=hedera_testnet

# Gas limit for transactions
GAS_LIMIT=3000000

# Gas price (in wei)
GAS_PRICE=1000000000

# =============================================================================
# TESTING CONFIGURATION
# =============================================================================

# Test accounts (for testing purposes only)
TEST_ACCOUNT_1_PRIVATE_KEY=
TEST_ACCOUNT_2_PRIVATE_KEY=
TEST_ACCOUNT_3_PRIVATE_KEY=

# Test game configuration
TEST_GAME_ID=sample-quiz-game
TEST_GAME_METADATA_URI=ipfs://QmSampleGameMetadata

# =============================================================================
# PRODUCTION CONFIGURATION
# =============================================================================

# Production environment flag
NODE_ENV=development

# Logging level
LOG_LEVEL=info

# Rate limiting
RATE_LIMIT_REQUESTS_PER_MINUTE=100

# =============================================================================
# BACKUP AND RECOVERY
# =============================================================================

# Backup wallet addresses
BACKUP_WALLET_1=
BACKUP_WALLET_2=

# Emergency contact
EMERGENCY_CONTACT_EMAIL=

# =============================================================================
# COMPLIANCE AND LEGAL
# =============================================================================

# Terms of service URL
TERMS_OF_SERVICE_URL=

# Privacy policy URL
PRIVACY_POLICY_URL=

# =============================================================================
# NOTES
# =============================================================================

# 1. Never commit the actual .env file to version control
# 2. Use strong, unique private keys for production
# 3. Regularly rotate API keys and secrets
# 4. Monitor gas usage and adjust limits as needed
# 5. Keep backup copies of important configuration
# 6. Test all configurations in testnet before mainnet deployment
# 7. Use environment-specific configurations for different networks
# 8. Implement proper access controls for sensitive operations
# 9. Monitor contract interactions and set up alerts
# 10. Keep documentation updated with any configuration changes
